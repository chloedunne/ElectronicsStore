<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="40dp"
    android:background="@drawable/product_item">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewReviewRCV"
        android:layout_width="100dp"
        android:layout_margin="5dp"
        android:layout_height="100dp"
        android:background="@drawable/no_photo"
        android:padding="5dp"/>

    <RatingBar
        android:id="@+id/ratingBarReview"
        android:layout_marginTop="5dp"
        style="@android:style/Widget.Material.RatingBar.Indicator"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:progressTint="@color/blue"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/textViewProductNameRCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageViewReviewRCV"
        android:gravity="center"
        android:text="Product Name"
        android:textColor="@color/navy"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewBrandNameRCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Brand"
        android:textSize="14sp"
        android:layout_below="@id/textViewProductNameRCV"
        android:layout_toRightOf="@id/imageViewReviewRCV"/>


</RelativeLayout>