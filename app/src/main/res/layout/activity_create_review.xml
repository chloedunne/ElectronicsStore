<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/logo_review_activity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/electronics" />

    <TextView
        android:id="@+id/CreateReviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_review_activity"
        android:layout_centerInParent="true"
        android:textColor="@color/navy"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:text="Create Review" />

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:layout_marginTop="25dp"
        android:textColor="@color/navy"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:layout_below="@id/CreateReviewTextView"
        />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:numStars="5"
        android:progressTint="@color/blue"
        android:stepSize="0.5"
        android:layout_below="@id/ratingTextView"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/textViewReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textColor="@color/navy"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:layout_below="@id/rating_bar"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/editTextReview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/review_box"
        android:gravity="start"
        android:inputType="textPersonName"
        android:textColor="@color/navy"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_below="@id/textViewReview"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/submitReviewButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextReview"
        android:text="Submit Review"
        android:textSize="12sp"
        app:backgroundTint="@color/navy"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        />
    </RelativeLayout>

</ScrollView>